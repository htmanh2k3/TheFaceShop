@{
    Layout = null;
}
@{
    var loggedInUser = Session["TENTK"] as string;
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/CSS/style.css" rel="stylesheet" />
    <link href="~/CSS/font-awesome.min.css" rel="stylesheet" />
    <link href="~/CSS/responsive.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/gh/hung1001/font-awesome-pro@4cac1a6/css/all.css" rel="stylesheet" type="text/css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <script src="~/Scripts/jquery-3.7.1.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
</head>
<body class="sub_page">

    <div class="hero_area">
        <!-- header section strats -->
        <header class="header_section">
            <div class="container-fluid">
                <form method="get" action="@Url.Action("SearchSanPham","SanPham")">
                    <nav class="navbar navbar-expand-lg custom_nav-container ">
                        <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                            <div style="display: flex; align-items: center;">
                                <img style="width: 10%; margin-right: 20px;" src="~/Images/logo.png" alt="logo" />
                                <span class="name" style="font-size: 0.8em;">THE FACE SHOP</span>
                            </div>
                        </a>


                        <div class="input-group rounded">
                            <input style="border-radius: 70%" type="search" class="form-control rounded" placeholder="Tìm ở đây nè hihi" aria-label="Search" name="keyword" aria-describedby="search-addon" />
                            <span style="border-radius: 30%" class="input-group-text border-0" id="search-addon">
                                <i class="fad fa-search"></i>

                            </span>
                        </div>

                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                            <span class=""> </span>
                        </button>


                        <div class="collapse navbar-collapse" id="navbarSupportedContent">
                            <ul class="navbar-nav ">
                                <li class="nav-item ">
                                    <a class="nav-link" href="@Url.Action("Index","Home")">TRANG CHỦ</a>
                                </li>
                                <li class="nav-item ">
                                    <a class="nav-link" href="@Url.Action("showProduct","SanPham")">SẢN PHẨM</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" >LIÊN HỆ</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("Index", "GioHang")">GIỎ HÀNG</a>
                                </li>
                            </ul>

                            <div class="quote_btn-container">
                                @if (!string.IsNullOrEmpty(loggedInUser))
                                {
                                    <div style="text-align: right; padding: 10px;">
                                        <span id="userAccount">@loggedInUser</span>
                                        <div id="logout" style="display: none;">
                                            <a href="@Url.Action("DangXuat", "NguoiDung")" style="text-decoration:none">Đăng xuất</a>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <div style="text-align: right; padding: 10px;">
                                        <span id="userAccount"><a href="@Url.Action("DangNhap", "NguoiDung")" style="text-decoration:none">Tài Khoản</a></span>
                                        <div id="login" style="display: none;">
                                            <a href="@Url.Action("DangNhap", "NguoiDung")" style="text-decoration: none">Đăng nhập</a>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </nav>
                </form>
            </div>
        </header>
        <!-- end header section -->
    </div>


    <section class="contact_section layout_padding">
        <div class="main-contain">
            @RenderBody()
        </div>
    </section>

    <div class="footer_container">
        <!-- info section -->

        <section class="info_section ">
            <div class="container">
                <div class="row">
                    <div class="col-md-6 col-lg-3 ">
                        <div class="info_detail">
                            <h4>
                                THE FACE SHOP
                            </h4>
                            <p>
                                Có lẽ đã không còn xa lạ với những tín đồ làm đẹp, THEFACESHOP là thương hiệu mỹ phẩm nổi tiếng đến từ Hàn Quốc, được thành lập vào tháng 12 năm 2003.
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-2 mx-auto">
                        <div class="info_link_box">
                            <h4>
                                Links
                            </h4>
                            <div class="info_links">
                                <a class="" >
                                    Trang Chủ
                                </a>
                                <a class="" >
                                    Sản Phẩm
                                </a>
                                <a class="" >
                                    Đăng nhập
                                </a>
                                <a class="" >
                                    Giỏ hàng
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-3 ">
                        <h4>
                            Thành viên
                        </h4>
                        <form action="@Url.Action("DangKy","NguoiDung")">
                            <input type="text" placeholder="Email của bạn" />
                            <button type="submit">
                                Đăng kí
                            </button>
                        </form>
                    </div>
                    <div class="col-md-6 col-lg-3 mb-0 ml-auto">
                        <div class="info_contact">
                            <h4>
                                Địa chỉ
                            </h4>
                            <div class="contact_link_box">
                                <a >
                                    <i class="fas fa-map-marked-alt" ></i>
                                    <span>
                                        Nguyễn Văn Hưởng, Phường Thảo Điền, Thành Phố Thủ Đức, TP.HCM
                                    </span>
                                </a>
                                <a >
                                    <i class="fal fa-mobile-alt" style="color: #ffffff;"></i>
                                    <span>
                                        0234567890
                                    </span>
                                </a>
                                <a >
                                    <i class="fa fa-envelope" aria-hidden="true"></i>
                                    <span>
                                        thefacshop@gmail.com
                                    </span>
                                </a>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </section>

        <!-- end info section -->
        <!-- footer section -->
        <footer class="footer_section">
            <div class="container">
                <p>

                </p>
            </div>
        </footer>
        <!-- footer section -->
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
        $(document).ready(function(){
            $("#userAccount").hover(function(){
                if ('@loggedInUser' != '') {
                    $(this).hide();
                    $("#logout").show();
                } else {
                    $(this).hide();
                    $("#login").show();
                }
            });

            $("#logout").mouseleave(function(){
                $(this).hide();
                $("#userAccount").show();
            });

            $("#login").mouseleave(function(){
                $(this).hide();
                $("#userAccount").show();
            });
        });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="~/js/bootstrap.js"></script>
    <script src="~/js/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/custom.js"></script>
</body>
</html>

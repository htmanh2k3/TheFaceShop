@model DOANCUOIKYLTW.Models.TAIKHOAN

@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

@{
    string action = "DangNhap";
    if (ViewBag.thanhToanGioHang != null)
    {
        action = "DangNhap_GioHang";
    }
}

<h1 class="text-center" style="margin-top:20px">ĐĂNG NHẬP</h1>
@using (Html.BeginForm(action, "NguoiDung", FormMethod.Post))
{
    <div class="container d-flex justify-content-center">
        <div class="col-xs-7 col-sm-7 col-md-7 well well-sm text-left">
            <div class="form-group">
                <label for="UserName">Tên tài khoản</label>
                @Html.TextBoxFor(model => model.TENTK, new { @class = "form-control", placeholder = "Nhập tên tài khoản" })
                @Html.ValidationMessageFor(model => model.TENTK)
            </div>
            <div class="form-group">
                <label for="Password">Mật khẩu</label>
                @Html.PasswordFor(model => model.MATKHAU, new { @class = "form-control", placeholder = "Nhập mật khẩu" })
                @Html.ValidationMessageFor(model => model.MATKHAU)
            </div>

            <div style="text-align:center;">
                <button type="submit" class="btn btn-primary">Đăng nhập</button>
            </div>
            <a href="@Url.Action("DangKy","NguoiDung")" style="text-decoration:none; margin-bottom: 30px">Chưa có tài khoản</a>
        </div>
    </div>
}

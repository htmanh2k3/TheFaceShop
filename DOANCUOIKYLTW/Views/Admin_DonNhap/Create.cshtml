@model DOANCUOIKYLTW.Models.DONNHAP

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    <link href="~/Css/LayoutAdmin.css" rel="stylesheet" />
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="header-wrapper">
        <div class="header-title">
            <span>Tạo mới</span>
            <h2>Đơn hàng nhập</h2>
        </div>
        <div class="user-info">
            <img src="~/Images/add.png" alt="" />
        </div>
    </div>

    <div class="tabular-wrapper">
        <a href="/Admin_DonNhap/Index">
            <div class="back">
                <i class='bx bx-arrow-back'></i>
            </div>
        </a>

        <div class="detail">
            <table class="table">
                <tr>
                    <th class="header-title">Mã đơn nhập</th>
                    <td>@Html.DisplayFor(model => model.MADN)</td>
                <tr />
                <tr>
                    <th class="header-title">Thời gian lập</th>
                    <td>@Html.DisplayFor(model => model.NGAYLAP)</td>
                </tr>
                <tr>
                    <th class="header-title">Tổng tiền</th>
                    <td>@Html.DisplayFor(model => model.TONGTIEN)</td>
                </tr>
                <tr>
                    <th class="header-title">Trạng thái đơn hàng</th>
                    <td>Đang lập đơn</td>
                </tr>
            </table>
        </div>
        <input type="submit" value="Đặt hàng" class="button" />
    </div>
    <div class="tabular-wrapper">
        <h3 class="main-title">Thông tin chi tiết</h3>
        <a href="/Admin_DonNhap/CreateCTDN">
            <i class='bx bx-add-to-queue icon'></i>
        </a>
        <div class="table-container">
            <table>
                <thead>
                <th>Sản phẩm </th>
                <th>Số lượng</th>
                <th>Thành tiền</th>
                <th></th>
                </thead>
                @foreach (var hdnx in ViewBag.CTDN)
                {
            <tr>
                <td>@hdnx.MASP</td>
                <td>@hdnx.SOLUONG</td>
                <td>@hdnx.THANHTIEN</td>
                <td>
                    <a href="/Admin_DonNhap/DeleteCTDN/@hdnx.MASP">
                        <i class='bx bx-trash icon'></i>
                    </a>
                </td>
            </tr>
                }
            </table>
        </div>
    </div>
}


<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
